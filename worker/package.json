{
    "name": "rfe-backend-worker",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "wrangler dev",
        "deploy": "wrangler deploy",
        "deploy:prod": "wrangler deploy --env production",
        "deploy:staging": "wrangler deploy --env staging",
        "db:create": "wrangler d1 create rfe-db",
        "db:migrate": "wrangler d1 execute rfe-db --file=schema.sql",
        "db:migrate:local": "wrangler d1 execute rfe-db --local --file=schema.sql",
        "db:migrate:prod": "wrangler d1 execute rfe-db --env production --file=schema.sql",
        "secret:jwt": "wrangler secret put JWT_SECRET",
        "secret:jwt:prod": "wrangler secret put JWT_SECRET --env production",
        "cf-typegen": "wrangler types",
        "tail": "wrangler tail",
        "tail:prod": "wrangler tail --env production"
    },
    "dependencies": {
        "hono": "^4.6.19",
        "bcryptjs": "^2.4.3",
        "jose": "^5.9.6"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20250204.0",
        "wrangler": "^3.107.3",
        "typescript": "^5.7.3",
        "@types/node": "^22.13.1",
        "@types/bcryptjs": "^2.4.6"
    }
}